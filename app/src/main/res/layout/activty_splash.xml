<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#03270C0C"
    android:orientation="vertical">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/first_text"
        android:layout_centerHorizontal="true"
        android:src="@drawable/line"
        android:layout_marginBottom="40dp"></ImageView>

    <TextView
        android:id="@+id/first_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Line 메모장"
        android:textSize="20dp">

    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/first_text"
        android:layout_centerInParent="true"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="-49dp"
        android:layout_toEndOf="@+id/first_text"
        android:text="by Erjuer01">

    </TextView>


</RelativeLayout>